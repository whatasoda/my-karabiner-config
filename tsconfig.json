{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "target": "es2016",
    "module": "commonjs",
    "allowJs": false,
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "types",
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
